config.contentObjectExceptionHandler=0

plugin.tx_mobilecompany_mobilecompanylistplugin {
  view {
    # cat=plugin.tx_mobilecompany_mobilecompanylistplugin/file; type=string; label=Path to template root (FE)
    templateRootPaths.0 = EXT:mobile_company/Resources/Private/Templates/
    templateRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.templateRootPath}
    # cat=plugin.tx_mobilecompany_mobilecompanylistplugin/file; type=string; label=Path to template partials 
    partialRootPaths.0 = EXT:mobile_company/Resources/Private/Partials/
    partialRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.partialRootPath}
    # cat=plugin.tx_mobilecompany_mobilecompanylistplugin/file; type=string; label=Path to template layouts 
    layoutRootPaths.0 = EXT:mobile_company/Resources/Private/Layouts/
    layoutRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.layoutRootPath}
  }
  persistence {
    storagePid = {$plugin.tx_mobilecompany_mobilecompanylistplugin.persistence.storagePid}
  }
  settings {
    detailPid = 19
  }
}

