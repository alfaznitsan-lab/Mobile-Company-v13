page{
  bodyTagCObject = TEXT
  bodyTagCObject.value = <body class="{$plugin.tx_mobilecompany_mobilecompanyplugin.settings.styles}" style="background-color: {$plugin.tx_mobilecompany_mobilecompanyplugin.settings.backColor};">
}

page.includeCSS {
  styles = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.cssFile}
}

# these classes are only used in auto-generated templates
plugin.tx_mobilecompany._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-mobile-company table {
        border-collapse: separate;
        border-spacing: 10px;
    }

    .tx-mobile-company table th {
        font-weight: bold;
    }

    .tx-mobile-company table td {
        vertical-align: top;
    }

    .typo3-messages .message-error {
        color: red;
    }

    .typo3-messages .message-ok {
        color: green;
    }
)
